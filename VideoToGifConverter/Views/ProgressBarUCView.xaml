<UserControl
    x:Class="VideoToGifConverter.Views.ProgressBarUCView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:VideoToGifConverter.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VideoToGifConverter.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilty" />
        <Style TargetType="ProgressBar" x:Key="CustomProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Foreground" Value="#6A89CC"/>
            <Setter Property="Background" Value="#E9F0F7"/>
            <Setter Property="BorderBrush" Value="#B0C4DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <Grid>
                                <Rectangle x:Name="PART_Track" Fill="{TemplateBinding Background}" RadiusX="10" RadiusY="10" />
                                <Rectangle x:Name="PART_Indicator" Fill="{TemplateBinding Foreground}" RadiusX="10" RadiusY="10" HorizontalAlignment="Left" Width="0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid
        MaxHeight="30"
        Background="Transparent"
        Visibility="{Binding IsGridVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibilty}}">
        <ProgressBar
            Style="{StaticResource ResourceKey=CustomProgressBar}"
            Margin="1,1,1,1"
            Maximum="{Binding MaximumValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            Minimum="0"
            Value="{Binding CurrentValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            FontSize="12"
            Foreground="Black"
            Text="{Binding ProgressText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
