<UserControl
    x:Class="VideoToGifConverter.Views.FileLocationUCView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VideoToGifConverter.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="44"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="roundButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="FontSize" Value="12" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="0"
                                Direction="300"
                                Opacity="0.4"
                                ShadowDepth="3"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2" />
            <RowDefinition Height="*" MaxHeight="40" />
            <RowDefinition Height="2" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="85" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding LabelText, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />


        <TextBox
            x:Name="tbxSearch"
            Grid.Row="1"
            Grid.Column="3"
            Margin="0,2,0,2"
            IsReadOnly="True"
            Text="{Binding Location, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <TextBox.Resources>
                <VisualBrush
                    x:Key="tbxText"
                    AlignmentX="Left"
                    AlignmentY="Center"
                    Stretch="None"
                    TileMode="None">
                    <VisualBrush.Visual>
                        <Grid Background="Transparent">
                            <TextBlock
                                Margin="5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="DimGray"
                                Text="{Binding PlaceHolderContent}" />
                        </Grid>
                    </VisualBrush.Visual>
                </VisualBrush>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </TextBox.Resources>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="BorderBrush" Value="DimGray" />
                    <Setter Property="BorderThickness" Value="0.5" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />

                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background" Value="{StaticResource ResourceKey=tbxText}" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button
            Grid.Row="1"
            Grid.Column="5"
            MaxHeight="24"
            Background="#1E90FF"
            Command="{Binding BrowserDirectoryCommand}"
            Content="Browse"
            FontFamily="Arial"
            FontSize="12"
            Foreground="White"
            Style="{StaticResource ResourceKey=roundButtonStyle}" />
    </Grid>


</UserControl>
